doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(http-equiv='x-ua-compatible' content='ie=edge')
        title W.I.P. Mavial
        // Favicon
        link(rel='icon' type='image/ico' href='/img/MWR-favicon.ico')
