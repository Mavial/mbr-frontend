                    //-             a.dropdown-item(href='#') Something else here
                    // Right
                    ul.navbar-nav.nav-flex-icons
                        li.nav-item
                            a.nav-link.border.border-light.rounded.waves-effect(href='/auth/google')
                                i.fab.fa-google
                                span.px-4 Login
        // Navbar

        body
            block content
            include includes/footer.pug

